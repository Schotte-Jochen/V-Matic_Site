
@{
    ViewData["Title"] = "Start";
}

<div id="mainContentWrapper" class="container body-content">    <!-- "Over Vmatic (zie design) -->
    <div class="sectionWrapper">
        <div class="container-fluid pageSection">
            <div class="row">
                <div class="col">
                    <section id="homeAbout">
                        <h1 class="homeSectionTitle">Over Vmatic</h1>
                        <p class="homeContent">
                            Deze paragraaf zal een korte intro bevatten over het bedrijf.
                            Ook wordt er in de sectie onder deze tekst een photogallery getoond met enkele gerealiseerde projecten.
                            Deze tekst is puur bladvulling.
                        </p>
                    </section>
                    <section>
                        <h2 class="carouselTitle">Enkele projecten</h2>
                        <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                            <ol class="carousel-indicators">
                                <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                <li data-target="#myCarousel" data-slide-to="1"></li>
                                <li data-target="#myCarousel" data-slide-to="2"></li>
                                <li data-target="#myCarousel" data-slide-to="3"></li>
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                <div class="item active">
                                    <img src="~/images/Test/Pic1.jpg" alt="ASP.NET" class="img-responsive" />
                                    <div class="carousel-caption" role="option">
                                        <p>
                                            Wat extra info
                                        </p>
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="~/images/Test/Pic2.jpg" alt="Visual Studio" class="img-responsive" />
                                    <div class="carousel-caption" role="option">
                                        <p>
                                            Wat extra info
                                        </p>
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="~/images/Test/Pic3.jpg" alt="Microsoft Azure" class="img-responsive" />
                                    <div class="carousel-caption" role="option">
                                        <p>
                                            Wat extra info
                                        </p>
                                    </div>
                                </div>
                                <div class="item">
                                    <img src="~/images/Test/Pic4.jpg" alt="Microsoft Azure" class="img-responsive" />
                                    <div class="carousel-caption" role="option">
                                        <p>
                                            Wat extra info
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="container-fluid pageSection">
            <div class="row">
                <section id="homeServices">
                    <h1 class="homeSectionTitle">Onze diensten</h1>
                    <div class="homeContent">
                        <div class="col-sm-4">
                            <article id="homePoorten">
                                <img src="~/images/Test/Pic1.jpg" height="100" width="120" /><br/>
                                <a asp-action="UnderConstruction" class="btn btn-vmatic" role="button">
                                    Meer over onze poorten
                                </a>
                            </article>
                        </div>
                        <div class="col-sm-4">
                            <article id="homeService">
                                <img src="~/images/Test/Pic2.jpg" height="100" width="120" /><br />
                                <a asp-action="UnderConstruction" class="btn btn-vmatic" role="button">
                                    Wij staan dag en nacht voor u klaar!
                                </a>
                            </article>
                        </div>
                        <div class="col-sm-4">
                            <article id="homeHerstelling">
                                <img src="~/images/Test/Pic3.jpg" height="100" width="120" /><br />
                                <a asp-action="Contact" class="btn btn-vmatic" role="button">
                                    Herstelling nodig?<br/>
                                    Contacteer ons meteen!
                                </a>
                            </article>
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </div> 
</div>
