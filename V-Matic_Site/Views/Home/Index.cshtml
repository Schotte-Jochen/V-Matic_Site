
@{
    ViewData["Title"] = "Start";
}

<div id="mainContentWrapper" class="container body-content">    <!-- "Over Vmatic (zie design) -->
    <div class="sectionWrapper">
        <div class="container-fluid pageSection">
            <div class="row">
                <div class="col">
                    <section id="homeAbout">
                        <h1 class="homeSectionTitle">Over Vmatic</h1>
                        <p class="homeContent contentBorder">
                            Wij zijn VMatic, een bedrijf die zich specialiseert in het automatiseren en plaatsen van poorten.
                            Ook verzorgen wij service en onderhoud voor poorten van alle merken.
                        </p>
                    </section>
                    <section>
                        <h2 class="carouselTitle">Enkele projecten</h2>
                        <div class="carouselWrapper">
                            <div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
                                <ol class="carousel-indicators">
                                    <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
                                    <li data-target="#myCarousel" data-slide-to="1"></li>
                                    <li data-target="#myCarousel" data-slide-to="2"></li>
                                    <li data-target="#myCarousel" data-slide-to="3"></li>
                                </ol>
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <img src="~/images/Carousel-Gallery/Casteleyn_Buiten.jpg" alt="Bouwwerken Casteleyn Gits Buiten" class="img-responsive" />
                                        <div class="carousel-caption" role="option">
                                            <p>
                                                Casteleyn Gits
                                            </p>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <img src="~/images/Carousel-Gallery/Casteleyn_Binnen.jpg" alt="Bouwwerken Casteleyn Gits Binnen" class="img-responsive" />
                                        <div class="carousel-caption" role="option">
                                            <p>
                                                Casteleyn Gits
                                            </p>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <img src="~/images/Carousel-Gallery/TuinenMol_Buiten.jpg" alt="Tuinen Mol Buiten" class="img-responsive" />
                                        <div class="carousel-caption" role="option">
                                            <p>
                                                Tuinen Mol
                                            </p>
                                        </div>
                                    </div>
                                    <div class="item">
                                        <img src="~/images/Carousel-Gallery/TuinenMol_Binnen.jpg" alt="Tuinen Mol Binnen" class="img-responsive" />
                                        <div class="carousel-caption" role="option">
                                            <p>
                                                Tuinen Mol
                                            </p>
                                        </div>
                                    </div>
                                </div>
                                <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
                                    <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                                    <span class="sr-only">Previous</span>
                                </a>
                                <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
                                    <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                                    <span class="sr-only">Next</span>
                                </a>
                            </div>
                        </div>
                    </section>
                </div>
            </div>
        </div>
        <div class="container-fluid pageSection">
            <div class="row">
                <section id="homeServices">
                    <h1 class="homeSectionTitle">Onze diensten</h1>                 
                    <div class="homeContent">
                        <div class="col-sm-4">
                            <article id="homePoorten">
                                <h3 class="articleTitle">Automatische poorten</h3>
                                <div class="imgWrapper">
                                    <img src="~/images/AutomatischePoorten.jpg" height="100" width="120" />
                                </div>
                                <br />
                                <p class="articleContent contentBorder">
                                    Het is mogelijk voor ons om een reeds bestaande poort te automatiseren.
                                    Maar ook het plaatsen van een nieuwe poort is mogelijk.
                                </p>
                                <a asp-action="UnderConstruction" class="btn btn-vmatic" role="button">
                                    <i class="fas fa-arrow-circle-right"></i> Meer over<br />
                                    onze poorten
                                </a>
                            </article>
                        </div>
                        <div class="col-sm-4">
                            <article id="homeService">
                                <h3 class="articleTitle">Service 24/7</h3>
                                <div class="imgWrapper">
                                    <img src="~/images/24-7Service.jpg" height="100" width="120" />
                                </div>
                                <br />
                                <p class="articleContent contentBorder">
                                    Wij staan 24/7 klaar voor het herstellen van uw poort. Komt u 's ochtends tot
                                    het besluit dat uw poort niet meer functioneert. Contacteer ons gerust.
                                </p>
                                <a asp-action="Contact" class="btn btn-vmatic" role="button">
                                    <i class="fas fa-arrow-circle-right"></i> Wij staan dag<br />
                                    en nacht voor u klaar!
                                </a>
                            </article>
                        </div>
                        <div class="col-sm-4">
                            <article id="homeHerstelling">
                                <h3 class="articleTitle">Herstellingen</h3>
                                <div class="imgWrapper">
                                    <img src="~/images/Herstelling.jpg" height="100" width="120" />
                                </div>
                                <br />
                                <p class="articleContent contentBorder">
                                    Heeft u problemen met het openen van uw poort? Of kan uw poort gewoonweg niet
                                    meer dicht. Geen probleem, u kan ons altijd contacteren.
                                </p>
                                <a asp-action="Contact" class="btn btn-vmatic" role="button">
                                    <i class="fas fa-arrow-circle-right"></i> Herstelling nodig?<br />
                                    Contacteer ons meteen!
                                </a>
                            </article>
                        </div>
                        <br class="separator"/>
                    </div>                   
                </section>
            </div>
        </div>
    </div> 
</div>
<!-- Insert Footer (_Layout or PartialView) -->
